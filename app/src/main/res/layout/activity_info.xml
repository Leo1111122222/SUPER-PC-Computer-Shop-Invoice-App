<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DACKMODE"
    tools:context=".InfoActivity">
    <Button
        android:id="@+id/backbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="."
        android:layout_marginStart="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        style="@style/BUTTONDACK"
        android:layout_marginBottom="20dp"
        android:background="@drawable/baseline_arrow_back_24"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        style="@style/BUTTONDACK"
        android:text="Sales"
        android:textSize="30sp" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/purchases"
        android:layout_below="@+id/sales"
        android:text="Purchases"
        style="@style/BUTTONDACK"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
       />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mosales"
        style="@style/BUTTONDACK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchases"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="More Sales"
        android:textSize="30sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mostSuppliers"
        style="@style/BUTTONDACK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mosales"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="149dp"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="More Suppliers"
        android:textSize="30sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/customers2"
        style="@style/BUTTONDACK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mosales"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="More Customers"
        android:textSize="30sp" />

</RelativeLayout>